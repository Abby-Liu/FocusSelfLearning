{
  "manifest_version": 3,
  "name": "Focus Learning",
  "version": "1.0",
  "description": "An extension to keep you focused on your learning goals.",
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "images/icon16.png",
          "48": "images/icon48.png",
          "128": "images/icon128.png"
      }
  },
  "permissions": [
      "storage",
      "activeTab",
      "webNavigation"
  ],
  "host_permissions": [
      "http://*/*",
      "https://*/*"
  ],
  "background": {
      "service_worker": "background.js"
  },
  "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
  }
}
